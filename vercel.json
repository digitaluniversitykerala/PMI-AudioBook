{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install && npm install --prefix backend && npm install --prefix frontend",
  "framework": "vite",
  "public": "frontend/dist",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": [
    "MONGO_URI",
    "FRONTEND_URL",
    "JWT_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "EMAIL_USER",
    "EMAIL_PASSWORD"
  ]
}
